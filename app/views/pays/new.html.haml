= render "pays-header"

.main
  %section.main-pay
    %h2.main-pay__head
      支払い方法
    = form_tag(register_pays_path, method: :post, id: 'charge-form', name: "inputForm",class: "main-pay__form") do
      .main-pay__form__detail
        %label.form-label カード番号
        %span.form-require 必須
        = text_field_tag "number", "", class: "main-pay__form__number", placeholder: "半角数字のみ", maxlength: "16",type: "text", id: "card_number",name: "card_number"
        %ul.main-pay__form__card
          %li.main-pay__form__card__list
            %img{:alt => "", :height => "20", :src => "//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?3678719749", :width => "49"}/
            %img{:alt => "", :height => "20", :src => "//www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?3678719749", :width => "34"}/
            %img{:alt => "", :height => "20", :src => "//www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?3678719749", :width => "30"}/
            %img{:alt => "", :height => "20", :src => "//www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?3678719749", :width => "32"}/
            %img{:alt => "", :height => "20", :src => "//www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?3678719749", :width => "21"}/
            %img{:alt => "", :height => "20", :src => "//www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?3678719749", :width => "32"}/
            %img{:alt => "", :height => "20", :src => "//www-mercari-jp.akamaized.net/assets/img/card/discover.svg?3678719749", :width => "32"}/
          #card_number_error
        .pay__form
          %label.form-label 有効期限
          %span.form-require 必須
          .pay__form__time
            .pay__form__time__month
              %select#exp_month{name: "exp_month",type: "text",class:"pay__form__time__month__list"}
                %option{value: ""} --
                %option{value: "1"}01
                %option{value: "2"}02
                %option{value: "3"}03
                %option{value: "4"}04
                %option{value: "5"}05
                %option{value: "6"}06
                %option{value: "7"}07
                %option{value: "8"}08
                %option{value: "9"}09
                %option{value: "10"}10
                %option{value: "11"}11
                %option{value: "12"}12
              %span 月
            .pay__form__time__year
              %select#exp_year{name: "exp_year", type: "text", class:"pay__form__time__year__list"}
                %option{value: ""} --
                %option{value: "2020"}20
                %option{value: "2021"}21
                %option{value: "2022"}22
                %option{value: "2023"}23
                %option{value: "2024"}24
                %option{value: "2025"}25
                %option{value: "2026"}26
                %option{value: "2027"}27
                %option{value: "2028"}28
                %option{value: "2029"}29
              %span 年
            %br
          #exp_date_error
        .pay__form
          %label.form-label セキュリティコード
          %span.form-require 必須
          = text_field_tag "cvc", "", class: "pay__form__security", placeholder: "カード背面3〜４桁の番号", maxlength: "4",id: "cvc", name: "cvc"
        .pay__note
          .pay__note__text
            %span.pay__note__text__question ? 
            カード裏面の番号とは？
        #card_token
        = submit_tag "登録する", id: "token_submit",class: "btn__form"

=render "items/singlefooter"